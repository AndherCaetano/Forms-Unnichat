    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script>
        // Verifica√ß√£o de autentica√ß√£o ao carregar a p√°gina
        document.addEventListener('DOMContentLoaded', function() {
            const autenticado = sessionStorage.getItem("autenticado") === "true";
            
            if (autenticado) {
                document.getElementById('login-container').style.display = 'none';
                document.getElementById('formulario-container').style.display = 'block';
            } else {
                document.getElementById('login-container').style.display = 'flex';
                document.getElementById('formulario-container').style.display = 'none';
            }
        });

        // Fun√ß√£o de verifica√ß√£o de senha
        function verificarSenha() {
            const senhaInserida = document.getElementById("senha").value;
            const senhaCorreta = "testeswebrh"; // SENHA DEFINIDA AQUI
            const errorMessage = document.getElementById("errorMessage");
            
            if (senhaInserida === senhaCorreta) {
                sessionStorage.setItem("autenticado", "true");
                document.getElementById('login-container').style.display = 'none';
                document.getElementById('formulario-container').style.display = 'block';
            } else {
                errorMessage.style.display = "block";
                document.getElementById("senha").focus();
            }
        }
        
        // Fun√ß√£o de logout
        function logout() {
            sessionStorage.removeItem("autenticado");
            document.getElementById('login-container').style.display = 'flex';
            document.getElementById('formulario-container').style.display = 'none';
            document.getElementById("senha").value = "";
            window.scrollTo(0, 0);
        }
        
        // Permitir pressionar Enter para enviar
        document.getElementById("senha").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                verificarSenha();
            }
        });

        // Fun√ß√µes do formul√°rio
        document.getElementById('sendEmail').addEventListener('click', function() {
            // Validar formul√°rio
            const form = document.getElementById('unnichatForm');
            const allTextareas = form.querySelectorAll('textarea');
            let isValid = true;
            
            allTextareas.forEach(textarea => {
                if (!textarea.value.trim()) {
                    isValid = false;
                    textarea.style.borderColor = 'red';
                } else {
                    textarea.style.borderColor = '';
                }
            });
            
            if (!isValid) {
                alert('Por favor, responda todas as perguntas antes de enviar.');
                return;
            }
            
            // Criar PDF
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            let yPosition = 20;
            
            // Adicionar cabe√ßalho
            doc.setFontSize(18);
            doc.setTextColor(18, 140, 126);
            doc.text('Respostas do Teste Unnichat', 105, yPosition, { align: 'center' });
            yPosition += 15;
            
            doc.setFontSize(12);
            doc.setTextColor(0, 0, 0);
            doc.text('Data: ' + new Date().toLocaleDateString(), 105, yPosition, { align: 'center' });
            yPosition += 20;
            
            // Adicionar respostas (c√≥digo completo como anteriormente)
            // ... [restante do c√≥digo de gera√ß√£o do PDF]
            
            // Salvar PDF
            const pdfBlob = doc.output('blob');
            const pdfUrl = URL.createObjectURL(pdfBlob);
            
            // Abrir cliente de e-mail
            let emailBody = "Ol√°,\n\nSegue em anexo as respostas do teste Unnichat.\n\n";
            emailBody += "Atenciosamente,\n[Seu Nome]";
            
            window.location.href = `mailto:shi@sendflow.com.br?cc=luiz@sendflow.pro&subject=Respostas do Teste Unnichat&body=${encodeURIComponent(emailBody)}&attachment=${encodeURIComponent(pdfUrl)}`;
        });
        
        document.getElementById('sendWhatsApp').addEventListener('click', function() {
            // Validar formul√°rio
            const form = document.getElementById('unnichatForm');
            const allTextareas = form.querySelectorAll('textarea');
            let isValid = true;
            
            allTextareas.forEach(textarea => {
                if (!textarea.value.trim()) {
                    isValid = false;
                    textarea.style.borderColor = 'red';
                } else {
                    textarea.style.borderColor = '';
                }
            });
            
            if (!isValid) {
                alert('Por favor, responda todas as perguntas antes de enviar.');
                return;
            }
            
            // Criar mensagem para WhatsApp
            let whatsappMessage = "*RESPOSTAS DO TESTE UNNICHAT*\n\n";
            whatsappMessage += "*Data:* " + new Date().toLocaleDateString() + "\n\n";
            
            // Adicionar todas as respostas (como no c√≥digo anterior)
            // ... [restante do c√≥digo de formata√ß√£o da mensagem]
            
            // Codificar mensagem para URL
            const encodedMessage = encodeURIComponent(whatsappMessage);
            
            // Abrir WhatsApp
            window.open(`https://wa.me/5511996504486?text=${encodedMessage}`, '_blank');
        });
    </script>
